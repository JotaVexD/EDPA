<Page
    x:Class="EDPA.WPF.Views.Pages.SearchSystem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:converters="clr-namespace:EDPA.WPF.Effects"
    Title="System Search"
    d:DesignHeight="600"
    d:DesignWidth="900"
    Background="{DynamicResource ApplicationBackgroundBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:ScoreToColorConverter x:Key="ScoreToColorConverter"/>
        <converters:ScoreToPercentageConverter x:Key="ScoreToPercentageConverter"/>
        <converters:WeightToColorConverter x:Key="WeightToColorConverter"/>
        <converters:ScoreToStarVisibilityConverter x:Key="ScoreToStarVisibilityConverter"/>

        <!-- Fallback brushes -->
        <SolidColorBrush x:Key="FallbackBackground" Color="#2B2B2B"/>
        <SolidColorBrush x:Key="FallbackForeground" Color="#BFBFBF"/>
        <SolidColorBrush x:Key="FallbackSecondaryText" Color="#D6D6D6"/>
        <SolidColorBrush x:Key="FallbackBorder" Color="#454545"/>
        <SolidColorBrush x:Key="FallbackScoreColor" Color="#FFFFFF"/>

        <!-- Style for ListView Items -->
        <Style x:Key="SystemListItemStyle" TargetType="ListViewItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4"
                                SnapsToDevicePixels="True">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                              HorizontalAlignment="Stretch"
                                              VerticalAlignment="Center"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#383838"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#383838"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#383838"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <!-- Main container with fixed header and scrollable content -->
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="System Search" 
                       FontSize="24" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource FallbackForeground}"/>
            <TextBlock Text="Find the best systems for piracy operations" 
                       FontSize="14" 
                       Foreground="{StaticResource FallbackSecondaryText}"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- First Separator -->
        <Separator Grid.Row="1" Background="{StaticResource FallbackBorder}" Margin="0,0,0,20"/>

        <!-- Search Controls Section -->
        <Grid Grid.Row="2" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Reference System -->
            <StackPanel Grid.Column="0" Margin="0,0,16,0">
                <TextBlock Text="Reference System" 
                           Margin="0,0,0,4"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource FallbackForeground}"/>
                <ui:TextBox x:Name="ReferenceSystemTextBox" 
                            Text="Sol" 
                            Width="120"
                            Height="38"/>
            </StackPanel>

            <!-- Max Distance -->
            <StackPanel Grid.Column="1" Margin="0,0,16,0">
                <TextBlock Text="Max Distance (LY)" 
                   Margin="0,0,0,4"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource FallbackForeground}"/>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Height="40">
                    <Slider x:Name="MaxDistanceSlider" 
                        TickFrequency="1"
                        Minimum="1" 
                        Maximum="50" 
                        Width="150"
                        Value="10"
                        IsSnapToTickEnabled="True"
                        VerticalAlignment="Center"
                        Margin="0,0,8,0"/>
                <TextBlock Text="{Binding Value, ElementName=MaxDistanceSlider, StringFormat={}{0:F0} ly}" 
                   VerticalAlignment="Center"
                   Foreground="{StaticResource FallbackForeground}"
                   Width="40"/>
                </StackPanel>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <ui:Flyout
                        ui:Name="FlyoutWarning"
                        Grid.Row="0"
                        Placement="Top">
                        <StackPanel>
                            <TextBlock
                            Width="280"
                            HorizontalAlignment="Left"
                            Text="Sytem not found!"
                            TextWrapping="WrapWithOverflow" />
                            <Button Margin="0,8,0,0" Content="OK" Click="ClosePopup_Click"/>
                        </StackPanel>
                    </ui:Flyout>
                    <ui:Button x:Name="SearchButton" 
                       Content="Search Nearby"
                       Width="120"
                       Height="32"
                       Margin="0,0,8,0"
                       Click="SearchButton_Click"/>
                </Grid>
                <ui:Button x:Name="ExportButton" 
                           Content="Export"
                           Width="80"
                           Height="32"
                           Margin="0,0,8,0"
                           Click="ExportButton_Click"/>
                <ui:Button x:Name="ClearResultsButton" 
                           Content="Clear"
                           Width="80"
                           Height="32"
                           Click="ClearResultsButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- Results Section with fixed height and internal scrolling -->
        <Grid Grid.Row="2" Margin="0,74,0,16" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Results Header -->
            <TextBlock Text="Results" 
                       FontSize="18" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,12"
                       Foreground="{StaticResource FallbackForeground}"/>

            <!-- Results List Container with fixed height and internal scrolling -->
            <Border Grid.Row="1" 
                    CornerRadius="4"
                    Background="{StaticResource FallbackBackground}"
                    Padding="8"
                    BorderThickness="1"
                    BorderBrush="{StaticResource FallbackBorder}"
                    Height="400
                    ">
                <!-- Fixed height to enable internal scrolling -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ui:ListView
                        x:Name="ResultsListView"
                        ItemsSource="{Binding}"
                        SelectionMode="Single"
                        SelectionChanged="ResultsDataGridView_SelectionChanged"
                        ItemContainerStyle="{StaticResource SystemListItemStyle}">
                        <ui:ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" 
                                        Background="{Binding FinalScore, Converter={StaticResource ScoreToColorConverter}}"
                                        CornerRadius="5"
                                        VerticalAlignment="Center"
                                        Padding="8,4"
                                        Width="30"
                                        Margin="0,0,15,0">
                                        <TextBlock Text="{Binding FinalScore, StringFormat={}{0:F0}}"
                                                FontWeight="Bold"
                                                FontSize="12" 
                                                Foreground="{StaticResource FallbackScoreColor}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- System Name and Details on the RIGHT side -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding SystemName}" 
                                           FontWeight="SemiBold" 
                                           FontSize="12"
                                           Foreground="{StaticResource FallbackForeground}"/>
                                        <TextBlock Text="{Binding FinalScore, StringFormat='Score: {0:F2}/100'}" 
                                           FontSize="10" 
                                           Foreground="{StaticResource FallbackSecondaryText}" 
                                           Margin="0,2,0,0"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2" VerticalAlignment="Center" Orientation="Horizontal" Margin="10,0,0,8">
                                        <ui:SymbolIcon Symbol="Star24" 
                                            Foreground="{Binding FinalScore, Converter={StaticResource ScoreToColorConverter}}"
                                            Margin="0,0,2,0"
                                            Visibility="{Binding FinalScore, Converter={StaticResource ScoreToStarVisibilityConverter}, ConverterParameter=1}"/>
                                        <ui:SymbolIcon Symbol="Star24" 
                                            Foreground="{Binding FinalScore, Converter={StaticResource ScoreToColorConverter}}"
                                            Margin="0,0,2,0"
                                            Visibility="{Binding FinalScore, Converter={StaticResource ScoreToStarVisibilityConverter}, ConverterParameter=2}"/>
                                        <ui:SymbolIcon Symbol="Star24" 
                                            Foreground="{Binding FinalScore, Converter={StaticResource ScoreToColorConverter}}"
                                            Margin="0,0,2,0"
                                            Visibility="{Binding FinalScore, Converter={StaticResource ScoreToStarVisibilityConverter}, ConverterParameter=3}"/>
                                        <ui:SymbolIcon Symbol="Star24" 
                                            Foreground="{Binding FinalScore, Converter={StaticResource ScoreToColorConverter}}"
                                            Margin="0,0,2,0"
                                            Visibility="{Binding FinalScore, Converter={StaticResource ScoreToStarVisibilityConverter}, ConverterParameter=4}"/>
                                        <ui:SymbolIcon Symbol="Star24" 
                                            Foreground="{Binding FinalScore, Converter={StaticResource ScoreToColorConverter}}"
                                            Visibility="{Binding FinalScore, Converter={StaticResource ScoreToStarVisibilityConverter}, ConverterParameter=5}"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ui:ListView.ItemTemplate>
                    </ui:ListView>
                </ScrollViewer>
            </Border>
            <Border Grid.Row="2"
                    Height="30"
                    Margin="0,8,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ui:Button x:Name="PreviousPage" 
                        Icon="{ui:SymbolIcon ArrowLeft24}"
                        Grid.Column="0"
                        HorizontalAlignment="Right"
                        Width="40"
                        Height="32"
                        Margin="0,0,8,0"
                        Click="PrevPageButton_Click"/>
                    <TextBlock Text="Page 1/1" x:Name="PageCount"
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="16" 
                        FontWeight="SemiBold"
                        Margin="0,0,0,0"
                        Foreground="{StaticResource FallbackForeground}"/>
                    <ui:Button x:Name="NextPage" 
                        Icon="{ui:SymbolIcon ArrowRight24}"
                        Grid.Column="2"
                        HorizontalAlignment="Left"
                        Width="40"
                        Height="32"
                        Margin="8,0,0,0"
                        Click="NextPageButton_Click"/>
                    <ComboBox x:Name="PageSizeComboBox" 
                        Margin="0,0" Width="80" Height="40" Grid.Column="2"
                        HorizontalAlignment="Right"
                         SelectionChanged="PageSizeComboBox_SelectionChanged">
                        <ComboBoxItem Content="25" IsSelected="True"/>
                        <ComboBoxItem Content="50"/>
                        <ComboBoxItem Content="100"/>
                    </ComboBox>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="4">
            <Grid>
                <TextBlock x:Name="StatusLabel"
                           Text="Ready to search."
                           Foreground="{StaticResource FallbackSecondaryText}"/>

                <ProgressBar x:Name="ProgressBar"
                             Width="200"
                             Height="20"
                             Visibility="Collapsed"
                             HorizontalAlignment="Right"
                             VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Page>