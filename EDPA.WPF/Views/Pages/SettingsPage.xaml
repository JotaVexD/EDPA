<Page
    x:Class="EDPA.WPF.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EDPA.WPF.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="SettingsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Margin="42">

            <!-- Cache Management -->
            <GroupBox Header="Data Management">
                <StackPanel >
                    <ui:Button Content="Clear All Cache" 
                                  Click="ClearCacheButton_Click"/>
                    <TextBlock Text="Clears all cached API data" 
                                  FontStyle="Italic" Foreground="Gray"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="EDSM API Configuration">
                <StackPanel>
                    <TextBlock Text="EDSM API Key" FontWeight="SemiBold"/>
                    <ui:PasswordBox x:Name="ApiKeyPasswordBox" 
                               PlaceholderText="Enter your EDSM API key"/>
                    <TextBlock Text="Get your API key from: https://www.edsm.net/api-keys" 
                          FontStyle="Italic" Foreground="Gray" TextWrapping="Wrap"/>
                    <ui:Button x:Name="SaveApiKeyButton" 
                          Content="Save API Key" 
                          Click="SaveApiKeyButton_Click"/>
                </StackPanel>
            </GroupBox>
            <!-- Status Bar -->
            <Border Grid.Row="4" 
                Margin="0,16,0,0"
                Padding="0,8">
                <ui:InfoBar 
                    x:Name="InfoBox" 
                    IsOpen="False" 
                    Title="Notification"
                    Message="Operation completed successfully."/>
            </Border>
            <TextBlock x:Name="AppVersionTextBlock" 
                          HorizontalAlignment="Center" 
                          Foreground="Gray"/>
        </StackPanel>
    </ScrollViewer>
</Page>
