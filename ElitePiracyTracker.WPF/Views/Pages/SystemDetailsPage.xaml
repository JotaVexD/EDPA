<Page
    x:Class="ElitePiracyTracker.WPF.Views.Pages.SystemDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="System Details"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navigation Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="16" VerticalAlignment="Center">
            <ui:Button 
                Icon="{ui:SymbolIcon ArrowLeft24}"
                Content="Back to Search"
                Click="BackButton_Click"
                Margin="0,0,16,0"/>
            <TextBlock 
                Text="{Binding SystemName, StringFormat='System Search → {0}'}"
                FontSize="18"
                FontWeight="SemiBold"
                VerticalAlignment="Center"/>
        </StackPanel>

        <!-- System Details Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="16">
                <ui:CardControl Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Basic Information" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="System Name:" Grid.Row="0" Grid.Column="0" FontWeight="SemiBold" Margin="0,0,8,8"/>
                            <TextBlock Text="{Binding SystemName}" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8"/>

                            <TextBlock Text="Final Score:" Grid.Row="1" Grid.Column="0" FontWeight="SemiBold" Margin="0,0,8,8"/>
                            <TextBlock Text="{Binding FinalScore, StringFormat={}{0:F0}}" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"/>

                            <TextBlock Text="Economy Score:" Grid.Row="2" Grid.Column="0" FontWeight="SemiBold" Margin="0,0,8,8"/>
                            <TextBlock Text="{Binding EconomyScore, StringFormat={}{0:F0}}" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8"/>

                            <TextBlock Text="Government Score:" Grid.Row="3" Grid.Column="0" FontWeight="SemiBold" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding GovernmentScore, StringFormat={}{0:F0}}" Grid.Row="3" Grid.Column="1"/>
                        </Grid>
                    </StackPanel>
                </ui:CardControl>

                <ui:CardControl Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Additional Information" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="No Rings Score:" Grid.Row="0" Grid.Column="0" FontWeight="SemiBold" Margin="0,0,8,8"/>
                            <TextBlock Text="{Binding NoRingsScore, StringFormat='Score: {0:F2}/100'}" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8"/>
                            <TextBlock Text="Security Score:" Grid.Row="1" Grid.Column="0" FontWeight="SemiBold" Margin="0,0,8,8"/>
                            <TextBlock Text="{Binding SecurityScore, StringFormat='Score: {0:F2}/100'}" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"/>

                            <TextBlock Text="Faction State Score:" Grid.Row="2" Grid.Column="0" FontWeight="SemiBold" Margin="0,0,8,8"/>
                            <TextBlock Text="{Binding FactionStateScore, StringFormat='Score: {0:F2}/100'}" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8"/>

                            <TextBlock Text="Market Demand Score:" Grid.Row="3" Grid.Column="0" FontWeight="SemiBold" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding MarketDemandScore,StringFormat='Score: {0:F2}/100'}" Grid.Row="3" Grid.Column="1"/>
                        </Grid>
                    </StackPanel>
                </ui:CardControl>

                <ui:CardControl>
                    <StackPanel>
                        <TextBlock Text="Recommendation" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        <TextBlock Text="{Binding Recommendation}" TextWrapping="Wrap"/>
                    </StackPanel>
                </ui:CardControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>